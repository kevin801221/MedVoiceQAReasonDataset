# Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Gemini API Key (required for vision and language models)
GOOGLE_API_KEY=your_gemini_api_key_here

# Hugging Face API Key (required for speech models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# LangSmith (optional - for tracing and monitoring)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=medvoice-qa-reason-dataset

# Data paths
VQA_RAD_DATA_PATH=./data/vqa_rad/
OUTPUT_DIR=./runs/

# Pipeline configuration
MAX_WORKERS=4
BATCH_SIZE=10
LOG_LEVEL=INFO

# Model configurations
GEMINI_MODEL=gemini-2.0-flash-exp
WHISPER_MODEL=large-v3
BARK_MODEL=suno/bark

# Quality thresholds
MIN_IOU_THRESHOLD=0.5
MIN_BERTSCORE_F1=0.85
MIN_CONSISTENCY_RATE=0.8
MIN_PASS_RATE=0.8
